<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.nju.agiledevblog.dao.MessageDao">

    <!--添加留言-->
    <insert id="saveMessage" parameterType="cn.edu.nju.agiledevblog.entity.Message">
        insert into myblog.t_message (nickname,email,content,avatar,create_time,parent_message_id,admin_message)
        values (#{nickname},#{email},#{content},#{avatar},#{createTime},#{parentMessageId},#{adminMessage});
    </insert>

    <!--查询父级留言-->
    <select id="findByParentIdNull" resultType="cn.edu.nju.agiledevblog.entity.Message">
        select *
        from myblog.t_message c
        where c.parent_message_id = #{ParentId}
        order by c.create_time desc
    </select>

    <!--查询一级回复-->
    <select id="findByParentIdNotNull" resultType="cn.edu.nju.agiledevblog.entity.Message">
        select *
        from myblog.t_message c
        where c.parent_message_id = #{id}
        order by c.create_time desc
    </select>

    <!--查询二级以及所有子集回复-->
    <select id="findByReplayId" resultType="cn.edu.nju.agiledevblog.entity.Message">
        select *
        from myblog.t_message c
        where c.parent_message_id = #{childId}
        order by c.create_time desc
    </select>

    <!--删除留言-->
    <delete id="deleteMessage" >
        delete from myblog.t_message where id = #{id}
    </delete>
    
</mapper>
